{
    "i18n": true,
    "type": "tabs",
    "tabsStyle": {
        "width": "calc(100% - 100px)"
    },
    "items": {
        "tab1": {
            "type": "panel",
            "label": "Tab Hosts",
            "items": {
                "_headerAdapter": {
                    "type": "header",
                    "text": "imap adapter settings",
                    "size": 2
                },
                "hosts": {
                    "newLine": true,
                    "noDelete": false,
                    "type": "table",
                    "xs": 12,
                    "sm": 12,
                    "md": 12,
                    "lg": 12,
                    "xl": 12,
                    "items": [
                        {
                            "type": "checkbox",
                            "attr": "activ",
                            "width": 60,
                            "title": "activ",
                            "tooltip": "ACTIV",
                            "filter": true,
                            "sort": true,
                            "default": false,
                            "style": {
                                "textAlign": "center",
                                "width": 60
                            }
                        },
                        {
                            "type": "text",
                            "attr": "host",
                            "width": 200,
                            "title": "host",
                            "tooltip": "HOST",
                            "filter": false,
                            "sort": false,
                            "default": "",
                            "style": {
                                "width": 200
                            }
                        },
                        {
                            "type": "text",
                            "attr": "inbox",
                            "width": 100,
                            "title": "inbox",
                            "tooltip": "INBOX",
                            "filter": false,
                            "sort": false,
                            "default": "INBOX",
                            "style": {
                                "width": 100
                            }
                        },
                        {
                            "type": "number",
                            "attr": "port",
                            "width": 60,
                            "title": "port",
                            "tooltip": "PORT",
                            "filter": false,
                            "sort": false,
                            "default": 993,
                            "style": {
                                "width": 60
                            }
                        },
                        {
                            "type": "text",
                            "attr": "user",
                            "width": 200,
                            "title": "username",
                            "tooltip": "USERNAME",
                            "filter": false,
                            "sort": false,
                            "hidden": "_alive",
                            "default": "",
                            "style": {
                                "width": 200
                            }
                        },
                        {
                            "type": "password",
                            "attr": "password",
                            "width": 200,
                            "title": "password",
                            "tooltip": "PASSWORD",
                            "filter": false,
                            "sort": false,
                            "hidden": "_alive",
                            "default": "",
                            "style": {
                                "width": 200
                            }
                        },
                        {
                            "type": "number",
                            "attr": "maxi",
                            "width": 60,
                            "title": "max",
                            "tooltip": "MAX",
                            "min": 1,
                            "max": 99,
                            "filter": false,
                            "sort": false,
                            "default": 10,
                            "style": {
                                "textAlign": "center",
                                "width": 60
                            }
                        },
                        {
                            "type": "number",
                            "attr": "maxi_html",
                            "width": 60,
                            "title": "max_html",
                            "tooltip": "MAX_HTML",
                            "min": 1,
                            "max": 99,
                            "filter": false,
                            "sort": false,
                            "default": 10,
                            "style": {
                                "textAlign": "center",
                                "width": 60
                            }
                        },
                        {
                            "type": "checkbox",
                            "attr": "tls",
                            "width": 30,
                            "title": "tls",
                            "tooltip": "TLS",
                            "filter": false,
                            "sort": false,
                            "default": true,
                            "style": {
                                "textAlign": "center",
                                "width": 30
                            }
                        },
                        {
                            "type": "select",
                            "attr": "flag",
                            "width": 200,
                            "title": "flag",
                            "tooltip": "FLAG",
                            "options": [
                                { "label": "ALL", "value": "[\"ALL\"]" },
                                { "label": "ANSWERED", "value": "[\"ANSWERED\"]" },
                                { "label": "UNANSWERED", "value": "[\"UNANSWERED\"]" },
                                { "label": "DELETED", "value": "[\"DELETED\"]" },
                                { "label": "UNDELETED", "value": "[\"UNDELETED\"]" },
                                { "label": "DRAFT", "value": "[\"DRAFT\"]" },
                                { "label": "UNDRAFT", "value": "[\"UNDRAFT\"]" },
                                { "label": "FLAGGED", "value": "[\"FLAGGED\"]" },
                                { "label": "UNFLAGGED", "value": "[\"UNFLAGGED\"]" },
                                { "label": "NEW", "value": "[\"NEW\"]" },
                                { "label": "OLD", "value": "[\"OLD\"]" },
                                { "label": "SEEN", "value": "[\"SEEN\"]" },
                                { "label": "UNSEEN", "value": "[\"UNSEEN\"]" },
                                { "label": "RECENT", "value": "[\"RECENT\"]" }
                            ],
                            "filter": false,
                            "sort": false,
                            "default": "[\"ALL\"]",
                            "style": {
                                "textAlign": "center",
                                "width": 200
                            }
                        },
                        {
                            "type": "selectSendTo",
                            "title": "icon64",
                            "tooltip": "ICON64",
                            "attr": "picture",
                            "disabled": "!data.activ",
                            "jsonData": "{\"icon\":{\"icons\":${JSON.stringify(globalData.icons)}}}",
                            "command": "getIconList",
                            "width": 200,
                            "alsoDependsOn": ["icons"],
                            "style": {
                                "textAlign": "center",
                                "width": 200
                            }
                        },
                        {
                            "type": "text",
                            "attr": "tlsoption",
                            "width": 200,
                            "title": "tls_option",
                            "tooltip": "TLS_OPTION",
                            "filter": false,
                            "sort": false,
                            "default": "{\"rejectUnauthorized\": false}",
                            "style": {
                                "width": 200
                            }
                        },
                        {
                            "type": "select",
                            "attr": "autotls",
                            "width": 100,
                            "title": "auto_tls",
                            "tooltip": "AUTO_TLS",
                            "filter": false,
                            "sort": false,
                            "options": [
                                { "label": "never", "value": "never" },
                                { "label": "always", "value": "always" },
                                { "label": "required", "value": "required" }
                            ],
                            "default": "never",
                            "style": {
                                "width": 100
                            }
                        },
                        {
                            "type": "checkbox",
                            "attr": "att",
                            "width": 60,
                            "title": "attach",
                            "tooltip": "ATTACH",
                            "filter": false,
                            "sort": false,
                            "default": false,
                            "style": {
                                "width": 60
                            }
                        },
                        {
                            "type": "selectSendTo",
                            "attr": "node_option",
                            "width": 200,
                            "title": "node_option",
                            "tooltip": "node_option_tt",
                            "disabled": "!data.activ",
                            "filter": false,
                            "sort": false,
                            "jsonData": "{\"node_option\":{\"node_options\":${JSON.stringify(globalData.nodemailer_options)}}}",
                            "command": "getNodeList",
                            "alsoDependsOn": ["nodemailer_options"],
                            "style": {
                                "width": 200
                            }
                        }
                    ]
                },
                "dividerafterdevice": {
                    "newLine": true,
                    "type": "divider"
                },
                "max_mb": {
                    "type": "number",
                    "newLine": true,
                    "xs": 12,
                    "sm": 3,
                    "md": 12,
                    "lg": 3,
                    "xl": 6,
                    "label": "MAX_MB",
                    "default": 400,
                    "min": 100,
                    "max": 600,
                    "step": 1
                },
                "max_mb_selection": {
                    "type": "select",
                    "newLine": true,
                    "xs": 12,
                    "sm": 12,
                    "md": 12,
                    "lg": 3,
                    "xl": 6,
                    "label": "selection",
                    "default": 2,
                    "options": [
                        { "label": "TELEGRAM", "value": 1 },
                        { "label": "RESTART", "value": 2 },
                        { "label": "DATAPOINT", "value": 3 }
                    ]
                },
                "max_mb_telegram": {
                    "newLine": true,
                    "type": "text",
                    "label": "telegram",
                    "tooltip": "telegram_tooltip",
                    "disabled": "data.max_mb_selection !== 1",
                    "hidden": "data.max_mb_selection !== 1",
                    "hideOnlyControl": false,
                    "xs": 12,
                    "sm": 12,
                    "md": 12,
                    "lg": 3,
                    "xl": 6,
                    "default": ""
                },
                "max_mb_telegram_user": {
                    "newLine": true,
                    "type": "text",
                    "label": "telegram_user",
                    "tooltip": "telegram_user_tooltip",
                    "disabled": "data.max_mb_selection !== 1",
                    "hidden": "data.max_mb_selection !== 1",
                    "hideOnlyControl": false,
                    "xs": 12,
                    "sm": 12,
                    "md": 12,
                    "lg": 3,
                    "xl": 6,
                    "default": ""
                },
                "max_mb_object": {
                    "newLine": true,
                    "type": "objectId",
                    "label": "objectId",
                    "disabled": "data.max_mb_selection !== 3",
                    "hidden": "data.max_mb_selection !== 3",
                    "hideOnlyControl": false,
                    "xs": 12,
                    "sm": 12,
                    "md": 12,
                    "lg": 3,
                    "xl": 6,
                    "default": ""
                }
            }
        },
        "tab2": {
            "type": "panel",
            "label": "Tab icons",
            "items": {
                "_headerAlexa": {
                    "type": "header",
                    "text": "Info icons",
                    "size": 2
                },
                "icons": {
                    "xs": 12,
                    "sm": 12,
                    "md": 12,
                    "lg": 12,
                    "xl": 12,
                    "noDelete": false,
                    "type": "table",
                    "style": {
                        "textAlign": "center"
                    },
                    "items": [
                        {
                            "type": "text",
                            "attr": "iconname",
                            "width": "50%",
                            "title": "iconname",
                            "tooltip": "ICONNAME",
                            "filter": true,
                            "sort": true,
                            "default": ""
                        },
                        {
                            "type": "image",
                            "attr": "picture",
                            "width": "50%",
                            "title": "upload",
                            "tooltip": "UPLOAD",
                            "accept": "image/*",
                            "base64": true,
                            "crop": true
                        }
                    ]
                }
            }
        },
        "tab3": {
            "type": "panel",
            "label": "Tab oauth",
            "hidden": "true",
            "items": {
                "_headerAlexa": {
                    "type": "header",
                    "text": "Tab oauth2",
                    "size": 2
                },
                "oauth_token": {
                    "xs": 12,
                    "sm": 12,
                    "md": 12,
                    "lg": 12,
                    "xl": 12,
                    "noDelete": false,
                    "type": "table",
                    "style": {
                        "textAlign": "center"
                    },
                    "items": [
                        {
                            "type": "select",
                            "attr": "provider",
                            "width": "25%",
                            "title": "provider",
                            "tooltip": "PROVIDER",
                            "filter": false,
                            "sort": false,
                            "options": [
                                { "label": "none", "value": "" },
                                { "label": "office365", "value": "office365" }
                            ],
                            "default": "none",
                            "style": {
                                "textAlign": "center"
                            }
                        },
                        {
                            "type": "text",
                            "attr": "name",
                            "width": "25%",
                            "title": "name",
                            "tooltip": "NAME",
                            "filter": true,
                            "sort": true,
                            "default": ""
                        },
                        {
                            "type": "text",
                            "attr": "clientid",
                            "width": "25%",
                            "title": "clientid",
                            "tooltip": "CLIENTID",
                            "filter": true,
                            "sort": true,
                            "default": ""
                        },
                        {
                            "type": "password",
                            "attr": "secureid",
                            "width": "25%",
                            "title": "secureid",
                            "tooltip": "SECUREID",
                            "visible": true,
                            "filter": true,
                            "sort": true,
                            "default": ""
                        },
                        {
                            "type": "text",
                            "attr": "pathid",
                            "width": "25%",
                            "title": "pathid",
                            "disabled": "data.provider != \"office365\"",
                            "hidden": "data.provider != \"office365\"",
                            "tooltip": "PATHID",
                            "filter": true,
                            "sort": true,
                            "default": ""
                        }
                    ]
                }
            }
        },
        "tab4": {
            "type": "panel",
            "label": "Tab Nodemailer",
            "items": {
                "_headerNode": {
                    "type": "header",
                    "text": "Info Nodemailer",
                    "size": 2
                },
                "nodemailer_options": {
                    "xs": 12,
                    "sm": 12,
                    "md": 12,
                    "lg": 12,
                    "xl": 12,
                    "noDelete": false,
                    "type": "table",
                    "style": {
                        "textAlign": "center"
                    },
                    "items": [
                        {
                            "type": "text",
                            "attr": "nodename",
                            "width": "50%",
                            "title": "nodename",
                            "tooltip": "ICONNAME",
                            "filter": true,
                            "sort": true,
                            "default": "",
                            "style": {
                                "textAlign": "center"
                            }
                        },
                        {
                            "type": "checkbox",
                            "attr": "skipHtmlToText",
                            "width": "20%",
                            "title": "skipHtmlToText",
                            "tooltip": "skipHtmlToText_tt",
                            "filter": false,
                            "sort": false,
                            "default": false
                        },
                        {
                            "type": "number",
                            "attr": "maxHtmlLengthToParse",
                            "width": "20%",
                            "title": "maxHtmlLengthToParse",
                            "tooltip": "maxHtmlLengthToParse_tt",
                            "filter": false,
                            "sort": false,
                            "default": 0
                        },
                        {
                            "type": "checkbox",
                            "attr": "skipImageLinks",
                            "width": "15%",
                            "title": "skipImageLinks",
                            "tooltip": "skipImageLinks_tt",
                            "filter": false,
                            "sort": false,
                            "default": false
                        },
                        {
                            "type": "checkbox",
                            "attr": "skipTextToHtml",
                            "width": "15%",
                            "title": "skipTextToHtml",
                            "tooltip": "skipTextToHtml_tt",
                            "filter": false,
                            "sort": false,
                            "default": false
                        },
                        {
                            "type": "checkbox",
                            "attr": "skipTextLinks",
                            "width": "15%",
                            "title": "skipTextLinks",
                            "tooltip": "skipTextLinks_tt",
                            "filter": false,
                            "sort": false,
                            "default": false
                        }
                    ]
                }
            }
        }
    }
}
